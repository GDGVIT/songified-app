<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="@id/tv_songbook_name_single_songbook"
        app:layout_constraintBottom_toBottomOf="@id/tv_songbook_name_single_songbook"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginStart="16dp"
        android:src="@drawable/ic_back"
        android:id="@+id/back_single_songbook"

        />
    <TextView
        android:id="@+id/tv_songbook_name_single_songbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SONGBOOK 1"
        app:layout_constraintStart_toEndOf="@id/back_single_songbook"

        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/img_no_song_single_songbook"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:src="@drawable/empty_book"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_no_songs_single_songbook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="No songs in this songbook!"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/img_no_song_single_songbook"
        app:layout_constraintStart_toStartOf="@id/img_no_song_single_songbook"
        app:layout_constraintTop_toBottomOf="@id/img_no_song_single_songbook" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_songs_songbook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_songbook_name_single_songbook" />

</androidx.constraintlayout.widget.ConstraintLayout>