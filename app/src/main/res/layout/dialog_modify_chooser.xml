<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardBackgroundColor="@color/songified_black"
    app:cardCornerRadius="12dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/songified_black"

    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:padding="16dp"
        android:id="@+id/tv_edit_dialog_chooser"
        android:background="?attr/selectableItemBackground"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/songified_card_color"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:id="@+id/tv_delete_dialog_chooser"
        android:padding="16dp"
        android:background="?attr/selectableItemBackground"


        />

</LinearLayout>
</androidx.cardview.widget.CardView>