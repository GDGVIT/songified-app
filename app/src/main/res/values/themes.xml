<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Songified" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="android:windowBackground">@color/songified_black</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">#760BFE</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D8349B</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#000000</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorTertiary">#ffffff</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:fontFamily">@font/songified_font_family</item>

    </style>

    <style name="SearchViewStyle">


        <item name="android:textColorHint">#B3FFFFFF</item>
        <item name="android:editTextColor">#ffffff</item>

    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">#FFFFFF</item>
    </style>
    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#8CFFFFFF</item>
    </style>

    <style name="FilledButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/songified_primary</item>
    </style>

    <style name="MyAlertDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/songified_card_color</item>
        <item name="android:textColor">#ffffff</item>
        <item name="colorPrimary">@color/songified_primary_300</item>
        <item name="android:textColorPrimary">#ffffff</item>
    </style>

    <style name="SongifiedToolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="colorPrimary">#00FFFFFF</item>

        <item name="colorOnPrimary">#ffffff</item>
    </style>

</resources>